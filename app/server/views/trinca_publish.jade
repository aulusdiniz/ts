extends layout
//- incluir dados das trincas publicadas na página
include tile_publish.jade

block content
  
  - var trincas = typeof(tdata) != 'undefined' ? tdata : { }

  div(style='width:auto;display:inline-block;margin-top:10px;margin-left:115px;margin-bottom:0px;padding-top:25px;')
    a(style='color:#F4B718;text-decoration:none;font-size:20px;text-align:right;margin-left:22vw;font-weight:bold;') Trincas em Votação
    div(style='margin-top:20px; margin-bottom:10px;')
      include tiles_titles.jade
  div(style='width:auto;display:inline-block;margin-top:10px;margin-left:115px;margin-bottom:0px;')  
    a(style='color:#F4B718;text-decoration:none;font-size:20px;text-align:right;margin-left:22vw;font-weight:bold;') Trincas Finalizadas
    div(style='margin-top:20px; margin-bottom:10px;')
      include tiles_titles.jade
  
  div(style="height: 600px; margin: 0 0 80px 0;")    
    div#left(style='float:left; margin-left:100px; position:absolute;max-height:71.3vh;overflow-y:scroll;')
      div#content_block(style='float:both;')
        - for (var i=0; i < trincas.length; i++)
            if(trincas[i].status == 'voting')
              +tile_publish(i, trincas)
    
    div#right(style='float:right; margin: 0 0 0 55vw; max-height:71.3vh;overflow-y:scroll;')
      div#content_block(style='float:both;')
        - for (var i=0; i < trincas.length; i++)
            if(trincas[i].status == 'accept' || trincas[i].status == 'reject')
              +tile_publish(i, trincas)  
            
  include footer            

  block scripts
  script(src='vendor/jquery-1.11.1.js')
  script(src='vendor/bootstrap/js/bootstrap.min.js')
  script(src='../../js/views/refresh.js')	
