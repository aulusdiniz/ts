mixin tile_trinca(trinca)
  //- div#trinca_voting(style='margin-bottom: 0;', width='17vw')
  div#voting_item(style='background-color: green; height:130px; width:500px;')
    
    div(style="display: inline-block; background-color:#28B34A; width: 480px; margin: 0 0 0 20px;")
      div(style='display: inline-block; color:white; height:20px; margin: 0 0 0 15px; width:auto; ')
        a(href='#', style='text-decoration:none; color:#FFF;')= trinca.date
      div(style='display: inline-block; color:#1A441F; height:20px; margin: 0 10px 0 0; float: right; width: auto;')
        a(href='#', style='text-decoration:none; color:#1A441F; font-weight:bold; font-size:15px;')= trinca.user
    
    
    div#inner_panel(style='background-color: #28B34A; margin: 0 0 0 20px; height:90px;')
      ul(style="")
        
        li(style="list-style-type: none; display: inline-block; width: 150px; height: 90px;")
          div(style="display: inline-block;  overflow: hidden; height: 80px; width: 120px; margin: 10px 0 0 0;")
            img( src= "../img/cards/"+trinca.card1+".png", )
          div(style="width: 150px; height: 90px; margin: -100px 0 0 30px;")
            img(src='../img/arrow@3x.png', height='120px', width='80px', style=" display: inline-block; float: right;")
        
        li(style="list-style-type: none; display: inline-block; width: 150px; height: 90px;")
          div(style="display: inline-block;  overflow: hidden; height: 80px; width: 120px; margin: 10px 0 0 0;")
            img( src= "../img/cards/"+trinca.card2+".png", )
          div(style="width: 150px; height: 90px; margin: -100px 0 0 30px;")
            img(src='../img/arrow@3x.png', height='120px', width='80px', style=" display: inline-block; float: right;")
        
        li(style="list-style-type: none; display: inline-block")
          div(style="display: inline-block; overflow: hidden; height: 80px; width: 120px; margin: 10px 0 0 0;") 
            img( src= "../img/cards/"+trinca.card3+".png", )  
            
    div#foot_panel(style='background-color:#1B9355; margin: 0 0 0 20px; ; height:30px; color:white;')
      img(src='../img/people_icon@3x.png', height='30px', width='30px', style='margin-left: 30px;')
      a(href='', style='color:white; text-decoration:none;') (-)
      img(src='../img/agrees_icon@3x.png', height='30px', width='30px', style='margin-left: 220px;')
      a(href='', style='color:white; text-decoration:none;') (-) 
      img(src='../img/disagrees_icon@3x.png', height='30px', width='30px', style='margin-left: 10px;')
      a(href='', style='color:white; text-decoration:none;') (-)
      img(src='../img/discussion_icon@3x.png', height='30px', width='30px', style='margin-left: 10px;')
      a(href='', style='color:white; text-decoration:none;') (-)
    
