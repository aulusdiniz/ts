
extends layout

block content
	div.container(style='margin:20px')
		table.table.table-bordered.table-striped
			thead
				tr
					th(style='width:40px') #
					th(style='width:180px') Name
					th(style='width:200px') card1
					th(style='width:180px') card2
					th(style='width:180px') card3
					th(style='width:180px') justif
					th(style='width:180px') date
			tbody
			- for (var i = 0; i < trcs.length; i++)
				tr
					td= i+1
					td= trcs[i].user
					td= trcs[i].card1
					td= trcs[i].card2
					td= trcs[i].card3
					td= trcs[i].justif
					td= trcs[i].date
					
